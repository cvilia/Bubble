<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round_rectangle"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp">

    <TextView
        android:id="@+id/centerTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manage_center"
        android:textColor="@color/text_212121"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="5dp"
        android:background="@color/divider_e1e1e1" />

    <TextView
        android:id="@+id/shareTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share_weather"
        android:textColor="@color/text_212121"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="5dp"
        android:background="@color/divider_e1e1e1" />

    <TextView
        android:id="@+id/eatWhatTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/eat_what"
        android:textColor="@color/text_212121"
        android:textSize="15sp" />

</LinearLayout>